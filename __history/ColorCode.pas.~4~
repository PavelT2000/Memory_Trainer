  Case ColorNum of
    0: colorNow:= Green;
    1: colorNow:= red;
    2: colorNow:= blue;
    3: colorNow:= yellow;
  End;
  for numOfColors := Low(ColorsArr) to High(ColorsArr) do begin

  end;

end;

end.
