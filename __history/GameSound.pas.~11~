unit GameSound;

interface

type TMusic = (calmMind, doomFear, doomTear, elevator);
procedure TurnOnMusuc(music: TMusic);

implementation

uses FMainCode;

procedure TurnOnMusuc(music: TMusic);
//var SFileName: string;
begin
  //form1.MediaPlayer1.Stop;
  //form1.MediaPlayer1.Close;
  case music of
    calmMind: form1.MediaPlayer1.FileName:= 'music\calmMind';
    doomFear: form1.MediaPlayer1.FileName:= 'music\doomFear';
    doomTear: form1.MediaPlayer1.FileName:= 'music\doomTear';
    elevator: form1.MediaPlayer1.FileName:= 'music\elevator';
  end;
  form1.MediaPlayer1.Open;
  form1.MediaPlayer1.Play;
end;


end.
